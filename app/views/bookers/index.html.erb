<h1>Books</h1>

  <h4>Title</h4>
  <h4>Body</h4>
  <% @books.each do |book| %>

      <h4><%= book.title %></h4>
      <h4><%= book.body %></h4>
      <%= link_to "Show", show_book_path(book.id) %>
      <%= link_to "Edit", edit_book_path(book.id) %>
      <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  <% end %>

  <h2>New book</h2>

    <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4 >Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
    <% end %>